<Page x:Class="PongML.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PongML"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenu" Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical" >
            <Button Name="Btn_PlayGame" Margin="5" Click="Btn_PlayGame_Click">Play a Game</Button>
            <Button Name="Btn_Training" Margin="5" Click="Btn_Training_Click">Training</Button>
            <Button Name="Btn_Configuration" Margin="5" Click="Btn_Configuration_Click">Configuration</Button>
            <Button Name="Btn_Quit" Margin="5" Click="Btn_Quit_Click">Quit</Button>
        </StackPanel>
    </Grid>
</Page>
