<UserControl x:Class="PongML.GameControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PongML"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1200">
    <Grid>
        <TextBlock Name="Score" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="36"></TextBlock>
        <Canvas HorizontalAlignment="Center" Height="500" VerticalAlignment="Bottom" Width="1100">
            <Rectangle Fill="Black" Height="500" Stroke="White" Width="1100"/>
            <Rectangle Name="PaddleLeft" Fill="White" Height="75" Width="15" Canvas.Left="35" Canvas.Top="90"  />
            <Rectangle Name="PaddleRight" Fill="White" Height="75" Width="15" Canvas.Right="35" Canvas.Top="90" />
            <Rectangle Name="Ball" Fill="White" Height="16" Width="16" Canvas.Left="545" Canvas.Top="245"/>
        </Canvas>
    </Grid>
</UserControl>
